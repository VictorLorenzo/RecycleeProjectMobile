<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Localidades">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/component_16" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="#3568B5" />

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="37dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/iconereciclagem_2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:text="Descarte Correto"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/iconereciclagem_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutMapa"
            android:layout_width="294dp"
            android:layout_height="207dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="270dp"
                android:layout_height="179dp"
                app:srcCompat="@drawable/descarte_correto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="228dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundedinput"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Descrição:"
                android:textColor="#3E3B3B"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/montserrat2"
                android:text="A Descarte Correto realiza mutirões para coletar lixos eletrônicos descartados por outras organizações, como instituições públicas e empresas, e também por residências."
                android:textColor="#252424"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Endereço:"
                android:textColor="#3E3B3B"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/montserrat2"
                android:text="R. Carbonita, 01 - Parque Dez de Novembro, Manaus - AM, 69058-113"
                android:textColor="#252424"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/EntrarBut"
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/montserrat"
            android:text="Entrar em contato"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>