<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/component14"
    android:visibility="visible"
    tools:context=".Cadastro_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="67dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/logo_1" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="95dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat2"
                    android:text="Cadastro"
                    android:textColor="#000000"
                    android:textSize="33dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/montserrat2"
                    android:text="Nome"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/NomeInput"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/roundedinput"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp" />

                <TextView
                    android:id="@+id/Camponaopreenchido_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="Campo não preenchido"
                    android:textColor="#FF0000"
                    android:textSize="8sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat2"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EmailInpunt"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/roundedinput"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp" />

                <TextView
                    android:id="@+id/Camponaopreenchido_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="Campo não preenchido"
                    android:textColor="#FF0000"
                    android:textSize="8sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat2"
                    android:text="Senha"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/SenhaNInpunt"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/roundedinput"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="Maximo 6 Caracteres"
                    android:textColor="#C84F4F"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="289dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat2"
                    android:text="Confirmar Senha"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/CSenhaInpunt"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/roundedinput"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp" />

                <TextView
                    android:id="@+id/Camponaopreenchido_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="Campo não preenchido"
                    android:textColor="#FF0000"
                    android:textSize="8sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="261dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat2"
                    android:text="Você é uma recebedor de lixo eletrônico"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/Radio"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/Onão"
                        android:layout_width="87dp"
                        android:layout_height="wrap_content"
                        android:text="Não" />

                    <RadioButton
                        android:id="@+id/Osim"
                        android:layout_width="89dp"
                        android:layout_height="wrap_content"
                        android:text="Sim" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/Layout_Recebe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/montserrat2"
                        android:text="Endereço"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/EnderecoInput"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/roundedinput"
                        android:ems="10"
                        android:inputType="textPostalAddress"
                        android:paddingLeft="15dp" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat2"
                        android:text="Descrição"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/DescricaoInput"
                        android:layout_width="290dp"
                        android:layout_height="162dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/roundedinput"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:paddingLeft="15dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat2"
                        android:text="Imagem do local"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="197dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/roundedinput"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:srcCompat="@drawable/imagemicon" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="+ Adicionar imagem"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/Cadastro_Button"
                    android:layout_width="270dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/roundedbutton"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:shadowColor="#FF0000"
                    android:text="Cadastrar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.465"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>